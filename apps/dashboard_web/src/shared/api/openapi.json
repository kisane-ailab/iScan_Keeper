{
  "openapi": "3.0.3",
  "info": {
    "title": "iScan Keeper API",
    "description": "iScan Keeper Supabase Edge Functions API 문서",
    "version": "1.0.0",
    "contact": {
      "name": "Kisane AI Lab"
    }
  },
  "servers": [
    {
      "url": "https://ebxkbawwbndptgynpvxl.supabase.co/functions/v1",
      "description": "Production Server"
    }
  ],
  "tags": [
    {
      "name": "system-logs",
      "description": "시스템 로그 관리 API"
    },
    {
      "name": "responses",
      "description": "대응 관리 API"
    },
    {
      "name": "users",
      "description": "사용자 관리 API"
    },
    {
      "name": "stats",
      "description": "통계 API"
    }
  ],
  "paths": {
    "/system-logs": {
      "post": {
        "tags": ["system-logs"],
        "summary": "시스템 로그 생성",
        "description": "외부 기기에서 시스템 로그를 생성합니다. JWT 검증 없이 공개 API로 제공됩니다.",
        "operationId": "createSystemLog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSystemLogRequest"
              },
              "example": {
                "source": "iScan-Device-001",
                "category": "event",
                "code": "SCAN_COMPLETE",
                "logLevel": "info",
                "environment": "production",
                "description": "스캔 완료",
                "payload": "{\"scanCount\": 100}"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "로그 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateSystemLogResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (필수 필드 누락 또는 유효하지 않은 값)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/responses/claim": {
      "post": {
        "tags": ["responses"],
        "summary": "담당 선언",
        "description": "이벤트에 대해 담당을 선언합니다.",
        "operationId": "claimResponse",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClaimResponseRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "담당 선언 성공"
          },
          "404": {
            "description": "이벤트 로그를 찾을 수 없음"
          },
          "409": {
            "description": "이미 대응 중이거나 완료됨"
          }
        }
      }
    },
    "/responses/{id}/cancel": {
      "delete": {
        "tags": ["responses"],
        "summary": "담당 취소",
        "description": "담당을 취소(포기)합니다.",
        "operationId": "cancelResponse",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "대응 로그 ID"
          }
        ],
        "responses": {
          "200": { "description": "취소 성공" },
          "404": { "description": "대응 로그를 찾을 수 없음" }
        }
      }
    },
    "/responses/{id}/complete": {
      "patch": {
        "tags": ["responses"],
        "summary": "대응 완료",
        "description": "대응을 완료 처리합니다.",
        "operationId": "completeResponse",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "memo": { "type": "string", "description": "메모/조치 내역" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "완료 성공" },
          "404": { "description": "대응 로그를 찾을 수 없음" }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "사용자 목록 조회",
        "description": "담당자 목록을 조회합니다.",
        "operationId": "getUsers",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["online", "offline"]
            },
            "description": "상태 필터"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/User" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "사용자 생성",
        "description": "새 사용자를 생성합니다.",
        "operationId": "createUser",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "생성 성공" },
          "409": { "description": "이미 존재하는 사용자" }
        }
      }
    },
    "/stats/overview": {
      "get": {
        "tags": ["stats"],
        "summary": "전체 통계 개요",
        "description": "이벤트 및 사용자 통계 개요를 조회합니다.",
        "operationId": "getStatsOverview",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatsOverview"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase Auth JWT 토큰"
      },
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "apikey",
        "description": "Supabase Anon Key"
      }
    },
    "schemas": {
      "LogLevel": {
        "type": "string",
        "enum": ["info", "warning", "error", "critical"],
        "description": "로그 레벨"
      },
      "LogCategory": {
        "type": "string",
        "enum": ["event", "health_check"],
        "description": "로그 카테고리"
      },
      "ResponseStatus": {
        "type": "string",
        "enum": ["unchecked", "in_progress", "completed", "unresponded"],
        "description": "대응 상태"
      },
      "Environment": {
        "type": "string",
        "enum": ["development", "production"],
        "description": "환경"
      },
      "UserStatus": {
        "type": "string",
        "enum": ["online", "offline"],
        "description": "사용자 상태"
      },
      "UserRole": {
        "type": "string",
        "enum": ["admin", "manager", "member"],
        "description": "사용자 역할"
      },
      "CreateSystemLogRequest": {
        "type": "object",
        "required": ["source", "category", "code", "logLevel", "environment"],
        "properties": {
          "source": {
            "type": "string",
            "description": "로그 출처 (기기명, 서비스명 등)",
            "example": "iScan-Device-001"
          },
          "category": {
            "$ref": "#/components/schemas/LogCategory"
          },
          "code": {
            "type": "string",
            "description": "에러/이벤트 코드",
            "example": "SCAN_COMPLETE"
          },
          "logLevel": {
            "$ref": "#/components/schemas/LogLevel"
          },
          "environment": {
            "$ref": "#/components/schemas/Environment"
          },
          "description": {
            "type": "string",
            "description": "로그 설명/메시지"
          },
          "payload": {
            "type": "string",
            "description": "JSON string 형태의 추가 데이터"
          },
          "attachments": {
            "type": "string",
            "description": "JSON string 형태의 첨부파일 정보"
          }
        }
      },
      "CreateSystemLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "format": "uuid" },
              "source": { "type": "string" },
              "description": { "type": "string", "nullable": true },
              "category": { "$ref": "#/components/schemas/LogCategory" },
              "code": { "type": "string" },
              "log_level": { "$ref": "#/components/schemas/LogLevel" },
              "environment": { "$ref": "#/components/schemas/Environment" },
              "response_status": { "$ref": "#/components/schemas/ResponseStatus" },
              "created_at": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      "ClaimResponseRequest": {
        "type": "object",
        "required": ["eventLogId", "userId", "userName"],
        "properties": {
          "eventLogId": {
            "type": "string",
            "format": "uuid",
            "description": "이벤트 로그 ID"
          },
          "userId": {
            "type": "string",
            "format": "uuid",
            "description": "사용자 ID"
          },
          "userName": {
            "type": "string",
            "description": "사용자 이름"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "status": { "$ref": "#/components/schemas/UserStatus" },
          "role": { "$ref": "#/components/schemas/UserRole" },
          "organization_id": { "type": "string", "format": "uuid", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "CreateUserRequest": {
        "type": "object",
        "required": ["id", "name", "email"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        }
      },
      "StatsOverview": {
        "type": "object",
        "properties": {
          "events": {
            "type": "object",
            "properties": {
              "total": { "type": "integer" },
              "unresponded": { "type": "integer" },
              "inProgress": { "type": "integer" },
              "completed": { "type": "integer" }
            }
          },
          "users": {
            "type": "object",
            "properties": {
              "total": { "type": "integer" },
              "available": { "type": "integer" },
              "busy": { "type": "integer" }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "에러 메시지"
          },
          "details": {
            "description": "추가 에러 정보"
          }
        }
      }
    }
  }
}
